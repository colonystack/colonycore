{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ColonyCore Governance Registry",
  "type": "object",
  "additionalProperties": false,
  "required": ["documents"],
  "properties": {
    "documents": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "type", "title", "status", "path"],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "type": {
            "type": "string",
            "enum": ["RFC", "Annex", "ADR"]
          },
          "title": {
            "type": "string",
            "minLength": 1
          },
          "status": {
            "type": "string",
            "enum": ["Draft", "Planned", "Accepted", "Superseded", "Archived"]
          },
          "created": {
            "type": "string",
            "format": "date",
            "description": "Creation date for the document entry (YYYY-MM-DD)."
          },
          "date": {
            "type": "string",
            "format": "date",
            "description": "Effective or published date for the document (YYYY-MM-DD)."
          },
          "last_updated": {
            "type": "string",
            "format": "date",
            "description": "Most recent update date for the document entry (YYYY-MM-DD)."
          },
          "authors": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "stakeholders": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "reviewers": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "quorum": {
            "type": "string",
            "pattern": "^(?:[1-9][0-9]*|[1-9][0-9]*/[1-9][0-9]*|majority|unanimous)$",
            "description": "Required approval count or rule (e.g., \"2\", \"2/3\", \"majority\", \"unanimous\")."
          },
          "target_release": {
            "type": "string"
          },
          "owners": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "deciders": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "linked_annexes": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "linked_adrs": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "linked_rfcs": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "path": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    }
  }
}
